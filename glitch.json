{
  "install": "cd client && npm install && cd ../server && npm install",
  "start": "cd server && npm start",
  "watch": {
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "^server/",
        "^client/"
      ]
    },
    "throttle": 1000
  }
} 