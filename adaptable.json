{
  "version": 1,
  "name": "number-wars",
  "build": {
    "steps": [
      {
        "name": "Install client dependencies",
        "command": "cd client && npm install"
      },
      {
        "name": "Build client",
        "command": "cd client && npm run build"
      },
      {
        "name": "Install server dependencies",
        "command": "cd server && npm install"
      }
    ]
  },
  "start": {
    "command": "cd server && node src/index.js"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "8080"
  }
} 